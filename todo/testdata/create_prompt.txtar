# setup repo
mkdir repo
cd repo
exec jj git init

# list does not prompt when store missing
exec $II todo list
stdout 'No todos found\.'

# decline creation
stdin deny.txt
! exec $II todo create 'First todo'
stdout 'No todo store found\. Create one\?'

# accept creation
stdin accept.txt
exec $II todo create 'First todo'
stdout 'Created todo'

-- repo/deny.txt --
n
-- repo/accept.txt --
y
