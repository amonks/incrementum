# setup repo
mkdir repo
cd repo
exec jj git init

# create blocker and blocked
stdin input.txt
exec $II todo create 'Blocker' -p 0
exec $II todo create 'Blocked' -p 0

exec $II todo list --json
todoid stdout 'Blocker' BLOCKER_ID
todoid stdout 'Blocked' BLOCKED_ID

exec $II todo dep add $BLOCKED_ID $BLOCKER_ID --type blocks

# only blocker should be ready
exec $II todo ready --json
stdout 'Blocker'
! stdout 'Blocked'

exec $II todo close $BLOCKER_ID

# blocked should be ready
exec $II todo ready --json
stdout 'Blocked'
! stdout 'Blocker'

-- repo/input.txt --
y
